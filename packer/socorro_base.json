{
    "variables": {
        "aws_access_key": "",
        "aws_secret_key": ""
    },
    "builders": [
        {
            "type": "amazon-ebs",
            "access_key": "{{user `aws_access_key`}}",
            "secret_key": "{{user `aws_secret_key`}}",
            "region": "eu-west-1",
            "source_ami": "ami-4ac6653d",
            "instance_type": "t1.micro",
            "ssh_username": "root",
            "ami_name": "centos_test {{timestamp}}"
        }
    ],
    "provisioners": [
        {
            "type": "shell",
            "script": "bootstrap.sh"
        },
        {
            "type": "puppet-masterless",
            "manifest_file": "puppet/manifests/default.pp",
            "module_paths": [
                "puppet/modules"
            ],
            "prevent_sudo": "true"
        }
    ]
}
