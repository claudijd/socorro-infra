{
    "variables": {
        "aws_access_key": "",
        "aws_secret_key": ""
    },
    "builders": [
        {
            "type": "amazon-ebs",
            "access_key": "{{user `aws_access_key`}}",
            "secret_key": "{{user `aws_secret_key`}}",
            "region": "eu-west-1",
            "source_ami": "ami-e4ff5c93",
            "instance_type": "t2.micro",
            "ssh_username": "centos",
            "ami_name": "centos7_test__{{timestamp}}"
        }
    ],
    "provisioners": [
        {
            "type": "shell",
            "script": "bootstrap.sh",
            "execute_command": "sudo -E sh '{{ .Path }}'"
        },
        {
            "type": "puppet-masterless",
            "manifest_file": "puppet/manifests/default.pp",
            "module_paths": [
                "puppet/modules"
            ]
        }
    ]
}
